import lv2

examples = ["workhorse"]

bld.add_group()
	
for slug in examples:
	plugin = bld.shlib(
		lv2_bundle	  =	 True,
		lv2_resources = ["%s.manifest.ttl.in" % slug,"%s.ttl" % slug],
		name          = slug,
		target        = slug,
		source        = "%s.cpp" % slug,
		use           = bld.env.LIB_LV2MM,
		LIB_EXT		  = bld.env.pluginlib_EXT
	)
